<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Record Attendance</h2>
                <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Manage Employee</a></li>
                            <li class="breadcrumb-item"><a href="/record-attendance" class="breadcrumb-link">Record Attendance</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h2 class="card-header">Add Tag</h2>
                <div style="display:flex">
                    <h5 class="card-header" id="date">
                        Tag ID:
                    </h5>
                    <input type="text" id="tag-input" />
                    <button class="btn btn-success" id="btnSearch">Search</button>
                </div>
                <div id="Tag-Header">

                </div>

                <div class="card-body">
                    <div class="table-responsive" style="overflow-x: hidden;">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Step</th>
                                    <th>EmployeeID</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody id="tbTag">
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Step</th>
                                    <th>EmployeeID</th>
                                    <th>Name</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="button-container">
                            <button type="submit" class="btn btn-success" id="btnSubmit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script id="model-tag" type="text/template">
            <tr role="row">
                <td>{{Name}}</td>
                <td style="display:none">{{ID}}</td>
                <td>
                    <input class="step" type="text">
                </td>
                <td style="width:500px">
                </td>
            </tr>
        </script>
        <script id="model-tag-header" type="text/template">
            <div class="tag-container">
                <div class="tag-item">
                    <h5 class="card-header">ProductID: </h5>
                    <span>{{ProductID}}</span>
                </div>
                <div class="tag-item">
                    <h5 class="card-header">Color: </h5>
                    <span>{{Color}}</span>
                </div><div class="tag-item">
                    <h5 class="card-header">Size: </h5>
                    <span>{{Size}}</span>
                </div><div class="tag-item">
                    <h5 class="card-header">Quantity: </h5>
                    <span id="quantity">{{Quantity}}</span>
                </div>
            </div>
            <div class="tag-container">
                <div class="tag-item">
                    <h5 class="card-header">Table: </h5>
                    <input type="text" id="table">
                </div>
                <div class="tag-item">
                    <h5 class="card-header">Complete: </h5>
                    <input type="number" id="complete">
                </div>
                <div class="tag-item">
                    <h5 class="card-header">Error: </h5>
                    <input type="number" id="error">
                </div>
            </div>
        </script>
        <!-- ============================================================== -->
        <!-- end basic table  -->
        <!-- ============================================================== -->
    </div>
</div>
