<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Record Attendance</h2>
                <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Manage Employee</a></li>
                            <li class="breadcrumb-item"><a href="/record-attendance" class="breadcrumb-link">Record Attendance</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic table  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h2 class="card-header">Record today</h2>
                <h5 class="card-header" id="date">Date: </h5>
                <div class="card-body">
                    <form class="table-responsive" style="overflow-x: hidden;" method="post" action="~/record-attendance">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Type</th>
                                    <th style="width:20px">Present</th>
                                    <th style="width:20px">Absent</th>
                                    <th>Note</th>
                                </tr>
                            </thead>
                            <tbody id="tbEmployees">
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Role</th>
                                    <th>Type</th>
                                    <th>Present</th>
                                    <th>Absent</th>
                                    <th>Note</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="button-container">
                            <button type="submit" class="btn btn-success" id="btnSubmit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script id="model-employee" type="text/template">
            <tr role="row" class="{{Class}} employee">
                <td>{{ID}}</td>
                <td>{{Name}}</td>
                <td>{{Role}}</td>
                <td>{{Type}}</td>
                <td>
                    <input class="attend-radio" type="radio" name="{{ID}}" value="1">
                </td>
                <td>
                    <input class="attend-radio" type="radio" name="{{ID}}" value="0">
                </td>
                <td>
                    <input class="absent-note" type="text" name="absentNode{{ID}}">
                </td>
            </tr>
        </script>
        <!-- ============================================================== -->
        <!-- end basic table  -->
        <!-- ============================================================== -->
    </div>
</div>