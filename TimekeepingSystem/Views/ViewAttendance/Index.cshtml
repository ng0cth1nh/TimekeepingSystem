
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{

    <link href="~/Assets/libs/css/viewAttendance.css" rel="stylesheet" />
    <link rel="stylesheet" href="/Assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="/Assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/Assets/libs/css/style.css">
    <link rel="stylesheet" href="/Assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link href='/Assets/vendor/full-calendar/css/fullcalendar.css' rel='stylesheet' />
    <link href='/Assets/vendor/full-calendar/css/fullcalendar.print.css' rel='stylesheet' media='print' />

}

@section scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.min.js"></script>
    <script src='/Assets/vendor/full-calendar/js/moment.min.js'></script>
    <script src='/Assets/vendor/full-calendar/js/jquery-ui.min.js'></script>
    <script src="~/Assets/libs/js/viewAttendance.js"></script>

}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">View Attendance</h2>
                <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Manage Employee</a></li>
                            <li class="breadcrumb-item active"><a href="/view-attendance" class="breadcrumb-link">View Attendance</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end pageheader -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- simple calendar -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div id="calendar1" class="fc fc-unthemed fc-ltr">
                        <div class="fc-toolbar fc-header-toolbar">
                            <div class="fc-left">
                                <div class="fc-button-group">
                                    <button id="btnPrev" type="button" class="fc-prev-button fc-button fc-state-default fc-corner-left" aria-label="prev">
                                        <span class="fc-icon fc-icon-left-single-arrow">
                                        </span>
                                    </button>
                                    <button id="btnNext" type="button" class="fc-next-button fc-button fc-state-default fc-corner-right" aria-label="next">
                                        <span class="fc-icon fc-icon-right-single-arrow"></span>
                                    </button>
                                </div>
                                <button type="button" class="fc-today-button fc-button fc-state-default fc-corner-left fc-corner-right">today</button>
                            </div>
                            <div class="fc-right">
                                <div class="fc-button-group">
                                    <button type="button" class="fc-month-button fc-button fc-state-default fc-corner-left fc-state-active">month</button>
                                    <button type="button" class="fc-agendaWeek-button fc-button fc-state-default">week</button>
                                    <button type="button" class="fc-agendaDay-button fc-button fc-state-default">day</button>
                                    <button type="button" class="fc-listWeek-button fc-button fc-state-default fc-corner-right">
                                        list
                                    </button>
                                </div>
                            </div>
                            <div class="fc-center">
                                <h2 id="month-year"></h2>
                            </div>
                            <div class="fc-clear">
                            </div>
                        </div>

                        <div id="attendanceTable">
                            <table>
                                <thead id="thead">
                                </thead>
                                <tbody id="attend">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="model-dates" type="text/template">
        <th class="th-date">{{day}}</th>
    </script>

    <script id="model-attend-top" type="text/template">
        <td class="name-col">{{Name}}</td>
    </script>


    <script id="model-attend-top" type="text/template">
        <td class="missed-col">{{Absent}}</td>

    </script>

    <script id="model-attend-mid" type="text/template">
        <td class="attend-col {{class}}"></td>
    </script>


    <!-- ============================================================== -->
    <!-- end simple calendar -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- events calendar -->
    <!-- ============================================================== -->
</div>
